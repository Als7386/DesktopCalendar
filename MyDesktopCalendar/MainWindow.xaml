<Window x:Class="MyDesktopCalendar.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DesktopCalendar" Height="600" Width="1200"
        
        WindowStyle="None" 
        AllowsTransparency="True" 
        Background="Transparent"
        
        ShowInTaskbar="False"
        
        MouseLeftButtonDown="Window_MouseDown">

    <Border Background="#CC000000" CornerRadius="15" Padding="10">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="50"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="50"/>
                </Grid.ColumnDefinitions>

                <Button x:Name="BtnPrev" Content="◀" Click="BtnPrev_Click" 
                        Background="Transparent" Foreground="White" BorderThickness="0" FontSize="20" Cursor="Hand"/>

                <TextBlock x:Name="TxtYearMonth" Grid.Column="1" Text="2026년 1월" 
                           VerticalAlignment="Center" HorizontalAlignment="Center" 
                           FontSize="20" FontWeight="Bold" Foreground="White"/>

                <Button x:Name="BtnNext" Content="▶" Click="BtnNext_Click" 
                        Grid.Column="2" Background="Transparent" Foreground="White" BorderThickness="0" FontSize="20" Cursor="Hand"/>
            </Grid>

            <Button Content="✕" 
                    HorizontalAlignment="Right" VerticalAlignment="Top"
                    Click="BtnClose_Click"
                    Width="30" Height="30"
                    Background="Transparent" Foreground="Gray" BorderThickness="0" 
                    FontWeight="Bold" Cursor="Hand" Panel.ZIndex="100"/>

            <UniformGrid Grid.Row="1" Columns="7">
                <TextBlock Text="일" Foreground="Red" HorizontalAlignment="Center"/>
                <TextBlock Text="월" Foreground="White" HorizontalAlignment="Center"/>
                <TextBlock Text="화" Foreground="White" HorizontalAlignment="Center"/>
                <TextBlock Text="수" Foreground="White" HorizontalAlignment="Center"/>
                <TextBlock Text="목" Foreground="White" HorizontalAlignment="Center"/>
                <TextBlock Text="금" Foreground="White" HorizontalAlignment="Center"/>
                <TextBlock Text="토" Foreground="Blue" HorizontalAlignment="Center"/>
            </UniformGrid>

            <UniformGrid x:Name="CalendarGrid" Grid.Row="2" Columns="7"/>

            <Grid x:Name="MemoPopup" Grid.RowSpan="3" Visibility="Collapsed" Background="#EE000000">
                <Border Background="#333333" Width="280" Height="200" CornerRadius="10">
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="250">
                        <TextBlock x:Name="PopupDateText" Text="2026년 1월 1일" Foreground="White" HorizontalAlignment="Center" Margin="0,0,0,10" FontWeight="Bold"/>

                        <TextBox x:Name="MemoInput" Height="100" TextWrapping="Wrap" AcceptsReturn="True" Padding="5"/>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,15,0,0">
                            <Button Content="저장" Click="BtnSaveMemo_Click" Width="80" Height="30" Margin="5"/>
                            <Button Content="닫기" Click="BtnClosePopup_Click" Width="80" Height="30" Margin="5"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </Grid>
            <TextBlock Grid.Row="2"
                       Text="◢" 
                       HorizontalAlignment="Right" 
                       VerticalAlignment="Bottom"
                       FontSize="20" 
                       Foreground="#AAAAAA" 
                       Cursor="SizeNWSE"
                       Margin="0,0,5,5"
                       MouseLeftButtonDown="Resize_MouseDown"
                       Panel.ZIndex="200"/>

        </Grid>
    </Border>
</Window>